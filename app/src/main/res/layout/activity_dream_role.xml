<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C5D80"
    tools:context=".CareerPath">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/home"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dream_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dream Role"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="100dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_dream_role"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter your dream role"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/tv_dream_role"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_dream_role" />

        <TextView
            android:id="@+id/tv_dream_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dream Company"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_dream_role" />

        <EditText
            android:id="@+id/et_dream_company"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter your dream company"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/tv_dream_company"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_dream_company" />

        <Button
            android:id="@+id/button"
            android:layout_width="194dp"
            android:layout_height="44dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:fontFamily="@font/irish_grover"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_button2"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_dream_company" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="234dp"
            android:layout_height="219dp"
            app:srcCompat="@drawable/careerpath"
            android:alpha="0.20"
            android:layout_marginStart="-19dp"
            android:layout_marginTop="650dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
