<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkblue">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/entrypage1"
                android:layout_marginTop="-400dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:alpha="0.15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/entry_page_1"
                android:layout_marginTop="210dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/outer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/entry_outer"
                android:layout_marginStart="38dp"
                android:layout_marginTop="79dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/outer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/entry_outer2"
                android:layout_marginStart="51dp"
                android:layout_marginTop="9dp"
                app:layout_constraintTop_toTopOf="@id/outer1"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/outer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/entry_outer3"
                android:layout_marginStart="59dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toTopOf="@id/outer2"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="185dp"
                android:fontFamily="@font/roboto"
                android:text="Hey there!"
                android:textColor="#1C2A3A"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Mentaura.ai"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle=""
                android:layout_marginStart="38dp"
                android:layout_marginTop="210dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:fontFamily="@font/roboto"
                android:text="Elevate your career with AI Guru..!"
                android:textColor="#1C2A3A"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_entry"
                android:layout_width="183dp"
                android:layout_height="50dp"
                android:text="Log in"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:layout_marginTop="16dp"
                android:background="@drawable/gradient_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/inter"
                android:text="Donâ€™t have an account?"
                android:textColor="#1C2A3A"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_entry" />

            <Button
                android:id="@+id/button_entry_2"
                android:layout_width="183dp"
                android:layout_height="50dp"
                android:text="Sign up"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:layout_marginTop="16dp"
                android:background="@drawable/gradient_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView7" />

            <ImageView
                android:id="@+id/google_sign_up"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/google"
                android:layout_marginTop="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_entry_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/entry_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>